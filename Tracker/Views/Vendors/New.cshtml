<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Tracker</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    @{
      Layout = "_Layout";
    }
    <h1>Add a New Vendor</h1>

    <form action="/vendors" method="post">
      <h4>Vendor's information:</h4>
      <div>
        <label for="vendorName">Vendor Name: </label>
        <input id="vendorName" name="vendorName" type="text">
      </div>
      <div>
        <label for="registerDate">Registered Date: </label>
        <input id="registerDate" name="registerDate" type="date">
      </div>
      <div>
        <label for="address">Address: </label>
        <input id="address" name="address" type="text">
      </div>
      <button type="submit">Register</button>
    </form>
    <div class="buttons">
      <h4><a href="/">Homepage</a></h4>
      <h4><a href="/vendors">Back to Vendor List</a></h4>
    </div>
  </body>
</html>